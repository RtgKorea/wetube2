mixin videoBlock(video = {}) 
  .videoBlock
    a(href=routes.videoDetail(video.id))
      video.videoBlock__thumbnail(src=video.fileUrl, controls=false, width='auto')
      h4.videoBlock__title=video.title
      if video.views === 1
        h5.videoBlock_views 1 views
      else
        h5.videoBlock_views #(video.views) views